@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "All Posts";
}

@model IEnumerable<StackOverflowClone.Models.Post>
@using System.Security.Claims

<h2>Current Posts by you, @User.Identity.Name</h2>

@if (Model.Any())
{
    <ul>
        @foreach (var listItem in Model)
        {
            <li>@Html.ActionLink(listItem.Title, "Details", "Home", new { id = listItem.PostId }) | @Html.ActionLink("Edit", "Edit", new { id = listItem.PostId }) | @Html.ActionLink("Delete", "Delete", new { id = listItem.PostId })</li>
        }
    </ul>
}
else
{
    <p>You have no added any posts!</p>
}

@Html.ActionLink("Create new", "Create")