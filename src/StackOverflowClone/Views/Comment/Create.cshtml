@{ 
    ViewData["Title"] = "New Comment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model StackOverflowClone.Models.Comment

@if (User.Identity.IsAuthenticated)
{
    @using (Html.BeginForm("Create", "Comment", FormMethod.Post))
    {
        <input id="PostId" name="PostId" type="hidden" value="@ViewBag.PostId" />

        @Html.LabelFor(m => m.Body)
        @Html.TextBoxFor(m => m.Body)


        <input type="submit" value="Register" />
    }
}
else
{
    <h2>Please log in to comment!</h2>
}